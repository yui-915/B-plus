token Comma=',' Semi=';' LPar='(' RPar=')' LBrace='{' RBrace='}' ColonEq=':='
      Extern='extern' Eq='='
      Ident='</[_a-zA-Z][_a-zA-Z0-9]*/>' Integer='<[0-9]+>'
      Whitespace='</[ \\r\\n\\t]+/>'
;

skip Whitespace;
start file;

file: (
  function
| extern
)*;

function: Ident '(' ')' statement;
extern: 'extern' Ident ';';



statement: (
  block
| function_call
/ var_def
/ var_assign
) ';';

var_def: Ident ':=' rvalue;
var_assign: Ident '=' rvalue;

block: '{' statement* '}';
  
function_call: Ident([rvalue (',' rvalue)]);

rvalue: constant; 

constant: Integer;
